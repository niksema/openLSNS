 <?xml version="1.0" encoding="UTF-8"?>
 <description>
	This is an example of the network description in new format
</description>
<include lib="tlsns.1.0"/> <!-- include modules from binary library -->
<include lib="libase.xml"/>
<include lib="channels.xml/">
<template>
	<cells>
		<cell name="Hhn-base" module="...">
			<description>Simple model of Hodgkin-Haxley neuron</description>
			<parameters>
				<c name="Total capacitance">1</c>
				<v name="Membrane potential" import="/template/random/rnd" default="grnd">(-60,0)</v>
				<ion name="Na ions" import="/template/ions/ion[@name='non-specific']">
					<description>Reversal potential for Na ions</description>
					<parameters xpath="eds">(55,0)</parameters>
				</ion>
				<ion name="K ions" import="/template/ions/ion[@name='non-specific']">
					<description>Reversal potential for K ions</description>
					<parameters xpath="eds">(-90,0)</parameters>
				</ion>
				<ion name="Leak" import="/template/ions/ion[@name='non-specific']">
					<description>Reversal potential for leak current</description>
					<parameters xpath="eds">(-60,0)</parameters>
				</ion>
				<channel name="Na fast" import="/template/channels/channel[@name='Na fast']">
					<parameters xpath="gmax">(100,0)</parameters>
					<parameters xpath="gate[@name='Activation']/init">(0.6,0)</parameters>
					<parameters xpath="gate[@name='Inactivation']/init">(0.1,0)</parameters>
				</channel>
				<channel name="Krd" import="/template/channels/channel[@name='Kdr']">
					<parameters xpath="gmax">(80,0)</parameters>
					<parameters xpath="gate[@name='Activation']/init">(0.3,0)</parameters>
				</channel>
				<channel name="Leak current" import="/template/channels/channel[@name='Leak current']">
					<parameters xpath="gmax">(1,0.1)</parameters>
				</channel>
			<parameters>
		</cell>
	<!-- etc --> 
	</cells>
</template>
<network>
	<!-- common parameters of the network --> 
	<common>
		<step name="Integration step">0.1</step>
		<time name="Simulation time">1000</time>
		<!-- etc --> 
	</common>
	<!-- network elements --> 
	<subnet name="test subnet1">
		<population>
			<size name="N">1</size>
			<cell name="Neuron" import="/template/cells/cell[@name='Hhn-base']">
				<parameters xpath="v">(-62,0.1)</parameters>
				<parameters xpath="channels[@name='Na fast']/activation/init">(0.8,0.1)</parameters>
				<parameters xpath="channels[@name='Leak']/gmax">(1,0.2)</parameters>
			</cell>
		</population>
	</subnet>
	<subnet name="test subnet2">
		<population>
			<size name="N">10</size>
			<cell name="Neuron" import="/template/cells/cell[@name='Hhn-base']">
				<parameters xpath="channels[@name='Leak']/gmax">(0.8,0.1)</parameters>
			</cell>
		</population>
	</subnet>
</network>
